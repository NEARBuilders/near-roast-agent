{
  "name": "near-roasts",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter '!@near-roasts/agent'",
    "lint": "turbo run lint",
    "fmt": "prettier --write '**/*.{js,jsx,ts,tsx,json}'",
    "fmt:check": "prettier --check '**/*.{js,jsx,ts,tsx,json}'",
    "build:contract": "cd contract && cargo near build --no-docker",
    "deploy:contract": "cd contract && cargo near deploy --no-docker"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "turbo": "latest"
  },
  "packageManager": "bun@1.0.26",
  "dependencies": {
    "near-api-js": "^5.0.1"
  }
}
