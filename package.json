{
  "name": "near-roast-agent",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "fmt": "prettier --write '**/*.{js,jsx,ts,tsx,json}'",
    "fmt:check": "prettier --check '**/*.{js,jsx,ts,tsx,json}'"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "turbo": "latest"
  },
  "packageManager": "bun@1.0.26"
}
